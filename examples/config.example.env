# Health Agent Skill - Example Configuration
# Copy this file to ~/.config/health-agent/config.env and fill in your values

# Data Paths
HEALTH_DATA_PATH="~/Google Drive/Health Auto Export/Health Data/"
OUTPUT_PATH="~/Documents/Health Reports/"

# Email Settings
RECIPIENT_EMAIL="your-email@example.com"

# AI Model Configuration
# Options: kimi-coding/k2p5, gpt-4o, claude-3-5-sonnet
AI_MODEL="kimi-coding/k2p5"

# API Provider
# Options: openclaw, openai, kimi
API_PROVIDER="openclaw"
API_KEY="your-api-key-here"

# Timezone
TIMEZONE="Asia/Shanghai"

# Report Generation Time (24-hour format)
REPORT_TIME="12:30"
